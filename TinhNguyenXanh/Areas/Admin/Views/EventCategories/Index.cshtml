@model IEnumerable<TinhNguyenXanh.Models.EventCategory>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --primary: #10b981;
        --primary-dark: #059669;
        --primary-light: #34d399;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark: #0f172a;
        --gray: #64748b;
        --border: #e2e8f0;
        --shadow-sm: 0 2px 8px rgba(16, 185, 129, 0.08);
        --shadow-md: 0 8px 24px rgba(16, 185, 129, 0.12);
        --shadow-lg: 0 16px 48px rgba(16, 185, 129, 0.15);
    }

    body {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        font-family: 'Inter', 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    .page-header {
        font-weight: 800;
        color: var(--dark);
        font-size: 2rem;
        letter-spacing: -0.5px;
        position: relative;
        display: inline-block;
    }

        .page-header::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--primary-light));
            border-radius: 2px;
        }

    /* Animations */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes slideInRight {
        from

    {
        opacity: 0;
        transform: translateX(30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    @@keyframes scaleIn {
        from

    {
        opacity: 0;
        transform: scale(0.9);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .fade-in {
        animation: fadeInUp 0.6s ease forwards;
        opacity: 0;
    }

        .fade-in.delay-1 {
            animation-delay: 0.1s;
        }

        .fade-in.delay-2 {
            animation-delay: 0.2s;
        }

        .fade-in.delay-3 {
            animation-delay: 0.3s;
        }

        .fade-in.delay-4 {
            animation-delay: 0.4s;
        }

    /* Search Card */
    .search-card {
        background: white;
        border-radius: 20px;
        box-shadow: var(--shadow-md);
        overflow: hidden;
        max-width: 480px;
        position: relative;
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

        .search-card:focus-within {
            border-color: var(--primary);
            box-shadow: 0 12px 32px rgba(16, 185, 129, 0.2);
            transform: translateY(-2px);
        }

        .search-card .form-control {
            border: none;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            background: transparent;
            transition: all 0.3s ease;
        }

            .search-card .form-control:focus {
                outline: none;
                box-shadow: none;
            }

            .search-card .form-control::placeholder {
                color: #94a3b8;
            }

        .search-card .btn {
            border: none;
            padding: 1rem 2rem;
            font-weight: 600;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            transition: all 0.3s ease;
        }

            .search-card .btn:hover {
                background: linear-gradient(135deg, var(--primary-dark), var(--primary));
                transform: scale(1.05);
            }

    /* Add Button */
    .btn-add {
        background: linear-gradient(135deg, var(--primary), var(--primary-light));
        border: none;
        padding: 1rem 2.5rem;
        font-weight: 700;
        border-radius: 20px;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-add::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn-add:hover::before {
            left: 100%;
        }

        .btn-add:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 40px rgba(16, 185, 129, 0.3);
        }

    /* Alert */
    .alert-success {
        background: linear-gradient(135deg, #10b981, #34d399);
        border: none;
        color: white;
        font-weight: 600;
        box-shadow: var(--shadow-md);
        animation: scaleIn 0.4s ease;
    }

    /* Table Card */
    .card-table {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(16, 185, 129, 0.1);
    }

        .card-table thead {
            background: linear-gradient(135deg, #059669 0%, #10b981 50%, #34d399 100%);
            position: relative;
        }

            .card-table thead::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 3px;
                background: linear-gradient(90deg, var(--primary-light), var(--primary), var(--primary-light));
            }

        .card-table th {
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1.5px;
            padding: 1.3rem 1.2rem !important;
            color: #000000;
            border: none;
        }

        .card-table tbody tr {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-bottom: 1px solid #f1f5f9;
        }

            .card-table tbody tr:last-child {
                border-bottom: none;
            }

            .card-table tbody tr:hover {
                background: linear-gradient(90deg, #f0fdf4 0%, #ecfdf5 100%) !important;
                transform: scale(1.01);
                box-shadow: 0 8px 24px rgba(16, 185, 129, 0.12);
            }

        .card-table tbody td {
            padding: 1.2rem 1.2rem !important;
            vertical-align: middle;
        }

    .row-number {
        font-weight: 700;
        color: var(--primary);
        font-size: 1.1rem;
    }

    .category-name {
        font-weight: 600;
        color: var(--dark);
        font-size: 1.05rem;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 12px;
        justify-content: center;
        align-items: center;
    }

    .btn-action {
        width: 48px;
        height: 48px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid transparent;
        position: relative;
        overflow: hidden;
    }

        .btn-action::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.4s ease, height 0.4s ease;
        }

        .btn-action:hover::before {
            width: 120%;
            height: 120%;
        }

        .btn-action:hover {
            transform: translateY(-6px) scale(1.08);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
        }

        .btn-action.btn-warning {
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
        }

            .btn-action.btn-warning:hover {
                background: linear-gradient(135deg, #f59e0b, #d97706);
                border-color: rgba(245, 158, 11, 0.3);
            }

        .btn-action.btn-danger {
            background: linear-gradient(135deg, #f87171, #ef4444);
        }

            .btn-action.btn-danger:hover {
                background: linear-gradient(135deg, #ef4444, #dc2626);
                border-color: rgba(239, 68, 68, 0.3);
            }

    /* Pagination */
    .pagination-wrapper {
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 2rem;
        border-top: 2px solid #e2e8f0;
    }

    .pagination {
        gap: 8px;
    }

        .pagination .page-link {
            color: var(--primary);
            background: white;
            border: 2px solid #d1fae5;
            border-radius: 14px !important;
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            font-weight: 700;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-sm);
        }

        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            color: white;
            border-color: var(--primary);
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.3);
            transform: scale(1.1);
        }

        .pagination .page-link:hover:not(.active) {
            background: #ecfdf5;
            border-color: var(--primary);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.2);
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--gray);
    }

        .empty-state i {
            font-size: 5rem;
            color: #d1fae5;
            margin-bottom: 1.5rem;
        }

        .empty-state h4 {
            color: var(--dark);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header

    {
        font-size: 1.5rem;
    }

    .btn-action {
        width: 42px;
        height: 42px;
        font-size: 1rem;
    }

    .pagination .page-link {
        width: 42px;
        height: 42px;
    }

    }

    /* Loading Animation */
    @@keyframes pulse {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }

    }

    .loading {
        animation: pulse 1.5s ease-in-out infinite;
    }
</style>

<div class="container-fluid px-4 mt-4">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-5 gap-4 fade-in">
        <div>
            <h3 class="page-header m-0">Quản lý Danh mục Hoạt động</h3>
            <p class="text-muted mt-2 mb-0">Quản lý và tổ chức các danh mục sự kiện tình nguyện</p>
        </div>

        <div class="d-flex flex-column flex-lg-row gap-3 align-items-stretch">
            <form asp-action="Index" method="get" class="search-card m-0 fade-in delay-1">
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewBag.SearchString"
                           class="form-control" placeholder="🔍 Tìm kiếm danh mục..." autocomplete="off" />
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            <a asp-action="Create" class="btn btn-add d-flex align-items-center justify-content-center gap-2 fade-in delay-2">
                <i class="fas fa-plus-circle"></i>
                <span>Thêm danh mục</span>
            </a>
        </div>
    </div>

    <!-- Success Alert -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success rounded-pill shadow text-center py-3 mb-4 mx-auto fade-in delay-3" style="max-width: 600px;">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Thành công!</strong> @TempData["Success"]
        </div>
    }

    <!-- Table Card -->
    <div class="card card-table border-0 fade-in delay-2">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4" style="width: 100px;">
                                STT
                            </th>
                            <th>
                                Tên danh mục
                            </th>
                            <th class="text-center" style="width: 200px;">
                                </i>Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model.Select((c, i) => new { Category = c, Index = i + 1 + ((ViewBag.CurrentPage - 1) * 10) }))
                            {
                                <tr class="fade-in delay-@((item.Index % 4) + 1)">
                                    <td class="ps-4">
                                        <span class="row-number">@item.Index</span>
                                    </td>
                                    <td>
                                        <span class="category-name">@item.Category.Name</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@item.Category.Id"
                                               class="btn btn-warning btn-action"
                                               title="Chỉnh sửa"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <button type="button" class="btn btn-danger btn-action delete-btn"
                                                    data-id="@item.Category.Id"
                                                    data-name="@item.Category.Name"
                                                    title="Xóa danh mục"
                                                    data-bs-toggle="tooltip">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">
                                    <div class="empty-state">
                                        <i class="fas fa-folder-open"></i>
                                        <h4>Không có danh mục nào</h4>
                                        <p>Hãy thêm danh mục đầu tiên của bạn!</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <div class="pagination-wrapper fade-in delay-3">
                    <nav>
                        <ul class="pagination justify-content-center mb-0">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, searchString = ViewBag.SearchString })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Delete functionality
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const id = this.dataset.id;
                const name = this.dataset.name;

                Swal.fire({
                    title: 'Xác nhận xóa?',
                    html: `Bạn có chắc muốn xóa danh mục <strong class="text-danger">"${name}"</strong>?<br><small class="text-muted">Hành động này không thể hoàn tác!</small>`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '<i class="fas fa-trash me-2"></i>Xóa luôn',
                    cancelButtonText: '<i class="fas fa-times me-2"></i>Hủy bỏ',
                    confirmButtonColor: '#ef4444',
                    cancelButtonColor: '#64748b',
                    reverseButtons: true,
                    customClass: {
                        popup: 'rounded-4 shadow-lg',
                        confirmButton: 'rounded-pill px-4 py-2',
                        cancelButton: 'rounded-pill px-4 py-2'
                    }
                }).then(result => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Đang xóa...',
                            html: 'Vui lòng chờ trong giây lát',
                            allowOutsideClick: false,
                            didOpen: () => Swal.showLoading()
                        });

                        fetch(`/Admin/EventCategories/Delete/${id}`, {
                            method: 'POST',
                            headers: { 'RequestVerificationToken': token }
                        })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Đã xóa!',
                                    text: data.message || 'Danh mục đã được xóa thành công.',
                                    icon: 'success',
                                    confirmButtonColor: '#10b981',
                                    confirmButtonText: 'OK',
                                    customClass: {
                                        popup: 'rounded-4 shadow-lg',
                                        confirmButton: 'rounded-pill px-4 py-2'
                                    }
                                }).then(() => location.reload());
                            } else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: data.message || 'Không thể xóa danh mục.',
                                    icon: 'error',
                                    confirmButtonColor: '#ef4444',
                                    confirmButtonText: 'Đóng',
                                    customClass: {
                                        popup: 'rounded-4 shadow-lg',
                                        confirmButton: 'rounded-pill px-4 py-2'
                                    }
                                });
                            }
                        })
                        .catch(() => {
                            Swal.fire({
                                title: 'Lỗi kết nối!',
                                text: 'Không thể kết nối với máy chủ.',
                                icon: 'error',
                                confirmButtonColor: '#ef4444',
                                confirmButtonText: 'Đóng',
                                customClass: {
                                    popup: 'rounded-4 shadow-lg',
                                    confirmButton: 'rounded-pill px-4 py-2'
                                }
                            });
                        });
                    }
                });
            });
        });

        // Auto-hide success alert
        setTimeout(() => {
            const alert = document.querySelector('.alert');
            if (alert) {
                alert.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                alert.style.opacity = '0';
                alert.style.transform = 'scale(0.9)';
                setTimeout(() => alert.remove(), 500);
            }
        }, 5000);
    </script>
}