@using TinhNguyenXanh.Areas.Admin.Models
@model AdminDashboardViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --primary-color: #16a34a;
        --primary-hover: #15803d;
        --accent-light: #f0fdf4;
        --text-dark: #0f172a;
        --text-muted: #64748b;
        --border-color: #e5e7eb;
        --bg-light: #ffffff;
        --success: #10b981;
        --info: #06b6d4;
        --warning: #f59e0b;
        --danger: #ef4444;
    }

    body {
        background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    }

    .dashboard-section {
        padding: 2rem 0;
        min-height: 100vh;
    }

    /* Header Section */
    .dashboard-header {
        margin-bottom: 3rem;
        animation: fadeInDown 0.6s ease-out;
    }

        .dashboard-header h2 {
            color: var(--text-dark);
            font-size: 2rem;
            font-weight: 800;
            letter-spacing: -0.02em;
            margin-bottom: 0.5rem;
        }

        .dashboard-header p {
            color: var(--text-muted);
            font-size: 1rem;
            margin: 0;
        }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--card-color);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
        }

            .stat-card:hover::before {
                opacity: 1;
            }

    .stat-card-content {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .stat-info {
        flex: 1;
    }

    .stat-label {
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
        color: var(--text-muted);
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--text-dark);
        line-height: 1;
    }

    /* Card Colors */
    .stat-card.card-success {
        --card-color: var(--success);
    }

        .stat-card.card-success .stat-icon {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(16, 185, 129, 0.05));
            color: var(--success);
        }

    .stat-card.card-primary {
        --card-color: var(--primary-color);
    }

        .stat-card.card-primary .stat-icon {
            background: linear-gradient(135deg, rgba(22, 163, 74, 0.15), rgba(22, 163, 74, 0.05));
            color: var(--primary-color);
        }

    .stat-card.card-info {
        --card-color: var(--info);
    }

        .stat-card.card-info .stat-icon {
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(6, 182, 212, 0.05));
            color: var(--info);
        }

    .stat-card.card-warning {
        --card-color: var(--warning);
    }

        .stat-card.card-warning .stat-icon {
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(245, 158, 11, 0.05));
            color: var(--warning);
        }

    /* Chart Section */
    .chart-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        animation: fadeInLeft 0.8s ease-out;
    }

    .chart-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
        color: white;
        padding: 1.5rem 2rem;
    }

        .chart-header h5 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

    .chart-body {
        padding: 2rem;
    }

    .chart-container {
        position: relative;
        height: 400px;
    }

    /* Top Events Section */
    .top-events-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        height: 100%;
        animation: fadeInRight 0.8s ease-out;
    }

    .top-events-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
        color: white;
        padding: 1.5rem 2rem;
    }

        .top-events-header h5 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

    .top-events-body {
        padding: 2rem;
        max-height: 540px;
        overflow-y: auto;
    }

    .top-event-item {
        background: linear-gradient(135deg, #ffffff 0%, var(--accent-light) 100%);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .top-event-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: var(--primary-color);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .top-event-item:hover {
            transform: translateX(8px);
            box-shadow: 0 8px 24px rgba(22, 163, 74, 0.15);
            border-color: var(--primary-color);
        }

            .top-event-item:hover::before {
                transform: scaleY(1);
            }

        .top-event-item:last-child {
            margin-bottom: 0;
        }

    .event-rank {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 1.25rem;
        flex-shrink: 0;
        box-shadow: 0 4px 12px rgba(22, 163, 74, 0.3);
    }

    .event-info {
        flex: 1;
        min-width: 0;
    }

    .event-title {
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
        font-size: 1rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .event-badge {
        background: linear-gradient(135deg, var(--danger), #dc2626);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        flex-shrink: 0;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--text-muted);
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

    /* Animations */
    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes fadeInLeft {
        from

    {
        opacity: 0;
        transform: translateX(-30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    @@keyframes fadeInRight {
        from

    {
        opacity: 0;
        transform: translateX(30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s ease;
    }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

    /* Responsive */
    @@media (max-width: 991px) {
        .dashboard-header h2

    {
        font-size: 1.75rem;
    }

    .stats-grid {
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1rem;
    }

    .stat-card {
        padding: 1.5rem;
    }

    .stat-value {
        font-size: 2rem;
    }

    .chart-body {
        padding: 1.5rem;
    }

    .top-events-body {
        padding: 1.5rem;
    }

    }

    @@media (max-width: 768px) {
        .dashboard-section

    {
        padding: 1.5rem 0;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .stat-card-content {
        gap: 1rem;
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }

    .chart-container {
        height: 300px;
    }

    }

    /* Đảm bảo 2 khối cao bằng nhau đẹp mắt */
    .h-100 {
        height: 100%;
    }

    .flex-grow-1 {
        flex-grow: 1;
    }

    .overflow-auto {
        overflow-y: auto;
    }

    /* Cải thiện chart container khi dùng flex */
    .chart-container {
        position: relative;
        height: 100%;
        min-height: 380px;
    }

    /* Đẹp hơn khi không có dữ liệu top 5 */
    .empty-state {
        color: var(--text-muted);
        opacity: 0.7;
    }

        .empty-state i {
            font-size: 3.5rem;
            margin-bottom: 1rem;
        }
</style>

<section class="dashboard-section">
    <div class="container-fluid px-4">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <h2>Bảng Điều Khiển</h2>
            <p>Tổng quan về hoạt động và thống kê của hệ thống</p>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid fade-in">
            <div class="stat-card card-success">
                <div class="stat-card-content">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-label">Hoạt động</div>
                        <div class="stat-value">@Model.TotalEvents</div>
                    </div>
                </div>
            </div>

            <div class="stat-card card-primary">
                <div class="stat-card-content">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-label">Tình nguyện viên</div>
                        <div class="stat-value">@Model.TotalVolunteers</div>
                    </div>
                </div>
            </div>

            <div class="stat-card card-info">
                <div class="stat-card-content">
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-label">Ban tổ chức</div>
                        <div class="stat-value">@Model.TotalOrganizations</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Top Events -->
        <div class="row g-4">
            <div class="col-lg-8 h-100">
                <div class="chart-card fade-in h-100 d-flex flex-column">
                    <div class="chart-header">
                        <h5>
                            <i class="fas fa-chart-line"></i>
                            Thống kê hoạt động theo tháng
                        </h5>
                    </div>
                    <div class="chart-body flex-grow-1 d-flex align-items-center justify-content-center">
                        <div class="chart-container w-100">
                            <canvas id="eventChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 h-100">
                <div class="top-events-card fade-in h-100 d-flex flex-column">
                    <div class="top-events-header">
                        <h5>
                            <i class="fas fa-heart"></i>
                            Top 5 hoạt động yêu thích
                        </h5>
                    </div>
                    <div class="top-events-body flex-grow-1 overflow-auto">
                        @if (Model.Top5FavoriteEvents.Any())
                        {
                            @foreach (var (item, index) in Model.Top5FavoriteEvents.Select((v, i) => (v, i)))
                            {
                                <div class="top-event-item">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="event-rank">
                                            @(index + 1)
                                        </div>
                                        <div class="event-info">
                                            <h6 class="event-title mb-0">@item.Title</h6>
                                        </div>
                                        <div class="event-badge">
                                            <i class="fas fa-heart"></i>
                                            <span>@item.FavoriteCount</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state h-100 d-flex flex-column align-items-center justify-content-center">
                                <i class="fas fa-heart-broken mb-3"></i>
                                <p class="mb-0">Chưa có dữ liệu yêu thích</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Fade-in animation on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.fade-in').forEach(el => observer.observe(el));

        // Chart.js Configuration
        const ctx = document.getElementById('eventChart').getContext('2d');

        // Create gradient
        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(22, 163, 74, 0.5)');
        gradient.addColorStop(0.5, 'rgba(22, 163, 74, 0.15)');
        gradient.addColorStop(1, 'rgba(22, 163, 74, 0.02)');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.MonthlyEventData.Select(m => $"\"{m.Month}\"")))],
                datasets: [{
                    label: 'Số hoạt động',
                    data: [@Html.Raw(string.Join(",", Model.MonthlyEventData.Select(m => m.Count)))],
                    borderColor: '#16a34a',
                    backgroundColor: gradient,
                    borderWidth: 3,
                    pointBackgroundColor: '#16a34a',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 3,
                    pointRadius: 6,
                    pointHoverRadius: 10,
                    pointHoverBackgroundColor: '#16a34a',
                    pointHoverBorderColor: '#fff',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(15, 23, 42, 0.95)',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        padding: 12,
                        cornerRadius: 8,
                        displayColors: false,
                        titleFont: {
                            size: 14,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 13
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#64748b',
                            font: {
                                size: 12,
                                weight: '500'
                            },
                            padding: 10
                        }
                    },
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            color: '#64748b',
                            font: {
                                size: 12,
                                weight: '500'
                            },
                            padding: 10
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });
    </script>
}