@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    :root {
        --primary-color: #2563eb;
        --primary-hover: #1d4ed8;
        --text-dark: #1e293b;
        --text-muted: #64748b;
        --border-color: #e2e8f0;
        --input-focus: #dbeafe;
        --error-bg: #fef2f2;
        --error-border: #fecaca;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .container {
        max-width: 440px !important;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

        .container > div,
        .container > main {
            background: white;
            border-radius: 16px;
            padding: 3rem 2.5rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            animation: fadeIn 0.4s ease-out;
        }

    h2.fw-bold {
        color: var(--text-dark) !important;
        font-size: 1.75rem !important;
        font-weight: 700 !important;
        letter-spacing: -0.025em;
        margin-bottom: 2rem !important;
    }

    div[asp-validation-summary] {
        background-color: var(--error-bg);
        border: 1px solid var(--error-border);
        border-radius: 8px;
        padding: 0.875rem;
        margin-bottom: 1.5rem !important;
    }

    .form-floating {
        margin-bottom: 1.25rem !important;
    }

        .form-floating > .form-control {
            height: 58px !important;
            border: 1.5px solid var(--border-color) !important;
            border-radius: 10px !important;
            font-size: 0.95rem !important;
            transition: all 0.2s ease;
            background-color: #f8fafc;
            padding: 1.125rem 0.875rem !important;
        }

            .form-floating > .form-control:focus {
                border-color: var(--primary-color) !important;
                box-shadow: 0 0 0 4px var(--input-focus) !important;
                background-color: white !important;
                outline: none;
            }

        .form-floating > label {
            color: var(--text-muted) !important;
            font-size: 0.95rem !important;
            padding: 1rem 0.875rem !important;
            left: 0;
            top: 0;
            pointer-events: none;
            transform-origin: 0 0;
            transition: opacity 0.1s ease-in-out, transform 0.1s ease-in-out;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            opacity: 0.65;
            transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem) !important;
            color: var(--primary-color) !important;
        }

        .form-floating > .form-control::placeholder {
            color: transparent;
        }

        .form-floating > .form-control:focus::placeholder {
            color: #cbd5e1;
        }

    span[asp-validation-for] {
        font-size: 0.85rem;
        margin-top: 0.375rem;
        display: block;
        color: #dc2626 !important;
    }

    .form-check {
        padding-left: 1.75rem !important;
        margin-bottom: 1.5rem !important;
    }

    .form-check-input {
        width: 1.125rem !important;
        height: 1.125rem !important;
        margin-top: 0.125rem !important;
        border: 2px solid var(--border-color) !important;
        border-radius: 4px !important;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .form-check-input:checked {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }

        .form-check-input:focus {
            border-color: var(--primary-color) !important;
            box-shadow: 0 0 0 4px var(--input-focus) !important;
        }

    .form-check-label {
        color: var(--text-dark) !important;
        font-size: 0.9rem !important;
        cursor: pointer;
        user-select: none;
    }

    .btn-login {
        width: 100%;
        height: 52px;
        background: var(--primary-color) !important;
        color: white !important;
        border: none !important;
        border-radius: 10px !important;
        font-size: 1rem !important;
        font-weight: 600 !important;
        letter-spacing: 0.025em;
        transition: all 0.2s ease;
        box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.3);
        margin-bottom: 1.5rem !important;
    }

        .btn-login:hover {
            background: var(--primary-hover) !important;
            transform: translateY(-1px);
            box-shadow: 0 6px 12px -2px rgba(37, 99, 235, 0.4) !important;
        }

        .btn-login:active {
            transform: translateY(0) !important;
        }

        .btn-login:focus {
            box-shadow: 0 0 0 4px var(--input-focus), 0 4px 6px -1px rgba(37, 99, 235, 0.3) !important;
        }

    .text-center a {
        color: var(--text-muted) !important;
        font-size: 0.9rem !important;
        transition: color 0.2s ease;
        text-decoration: none !important;
    }

        .text-center a:hover {
            color: var(--primary-color) !important;
        }

        .text-center a strong {
            color: var(--primary-color) !important;
            font-weight: 600 !important;
        }

    hr.my-4 {
        border-color: var(--border-color) !important;
        opacity: 1 !important;
        margin: 2rem 0 !important;
    }

    #external-account p.text-muted {
        color: var(--text-muted) !important;
        font-size: 0.9rem !important;
        margin-bottom: 1rem !important;
    }

    .btn-outline-secondary {
        border: 1.5px solid var(--border-color) !important;
        color: var(--text-dark) !important;
        border-radius: 8px !important;
        padding: 0.625rem 1.5rem !important;
        font-size: 0.9rem !important;
        font-weight: 500 !important;
        transition: all 0.2s ease;
        background-color: white !important;
    }

        .btn-outline-secondary:hover {
            background-color: #f8fafc !important;
            border-color: var(--primary-color) !important;
            color: var(--primary-color) !important;
            transform: translateY(-1px);
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

        .btn-outline-secondary:focus {
            box-shadow: 0 0 0 4px var(--input-focus) !important;
        }

    @@media (max-width: 576px) {
        .container > div, .container > main

    {
        padding: 2rem 1.5rem;
        border-radius: 12px;
    }

    h2.fw-bold {
        font-size: 1.5rem !important;
    }

    .form-floating > .form-control {
        height: 54px !important;
    }

    .btn-login {
        height: 48px !important;
    }

    .btn-outline-secondary {
        padding: 0.5rem 1.25rem !important;
        margin-bottom: 0.5rem !important;
    }

    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    *:focus-visible {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
    }

    .form-control:focus-visible,
    .form-check-input:focus-visible,
    .btn:focus-visible {
        outline: none;
    }
</style>

<h2 class="fw-bold text-center mb-3">Đăng nhập</h2>
<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder=" " />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" placeholder=" " />
        <label asp-for="Input.Password">Mật khẩu</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3 text-start">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <label class="form-check-label" asp-for="Input.RememberMe">Ghi nhớ đăng nhập</label>
    </div>
    <button id="login-submit" type="submit" class="btn btn-login mb-3">Đăng nhập</button>
    <div class="text-center">
        <a asp-page="./ForgotPassword" class="d-block mb-2 text-decoration-none text-muted">Quên mật khẩu?</a>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="d-block mb-2 text-decoration-none text-muted">
            Chưa có tài khoản? <strong>Đăng ký ngay</strong>
        </a>
    </div>
    @if (Model.ExternalLogins?.Count > 0)
    {
        <hr class="my-4" />
        <div class="text-center">
            <p class="text-muted mb-2">Hoặc đăng nhập bằng</p>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="btn btn-outline-secondary me-2 mb-2" name="provider" value="@provider.Name">
                        @provider.DisplayName
                    </button>
                }
            </form>
        </div>
    }
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}