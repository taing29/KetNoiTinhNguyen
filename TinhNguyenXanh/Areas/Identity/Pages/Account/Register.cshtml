@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    :root {
        --primary-color: #2563eb;
        --primary-hover: #1d4ed8;
        --text-dark: #1e293b;
        --text-muted: #64748b;
        --border-color: #e2e8f0;
        --input-focus: #dcfce7;
        --error-bg: #fef2f2;
        --error-border: #fecaca;
    }

    body {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .container {
        max-width: 480px !important;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

        .container > div,
        .container > main {
            background: white;
            border-radius: 16px;
            padding: 3rem 2.5rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            animation: fadeIn 0.4s ease-out;
        }

    .text-center h2 {
        color: var(--text-dark) !important;
        font-size: 1.75rem !important;
        font-weight: 700 !important;
        letter-spacing: -0.025em;
        margin-bottom: 0.5rem !important;
    }

    .text-center p.text-muted {
        color: var(--text-muted) !important;
        font-size: 0.9rem !important;
        margin-bottom: 2rem !important;
    }

    div[asp-validation-summary] {
        background-color: var(--error-bg);
        border: 1px solid var(--error-border);
        border-radius: 8px;
        padding: 0.875rem;
        margin-bottom: 1.5rem !important;
    }

    .form-floating {
        margin-bottom: 1.25rem !important;
    }

        .form-floating > .form-control,
        .form-floating > .form-select {
            height: 58px !important;
            border: 1.5px solid var(--border-color) !important;
            border-radius: 10px !important;
            font-size: 0.95rem !important;
            transition: all 0.2s ease;
            background-color: #f8fafc;
            padding: 1rem 0.875rem !important;
        }

            .form-floating > .form-control:focus,
            .form-floating > .form-select:focus {
                border-color: var(--primary-color) !important;
                box-shadow: 0 0 0 4px var(--input-focus) !important;
                background-color: white !important;
                outline: none;
            }

        .form-floating > label {
            color: var(--text-muted) !important;
            font-size: 0.95rem !important;
            padding: 1rem 0.875rem !important;
            left: 0;
            top: 0;
            pointer-events: none;
            transform-origin: 0 0;
            transition: opacity 0.1s ease-in-out, transform 0.1s ease-in-out;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select:focus ~ label,
        .form-floating > .form-select:not([value=""]) ~ label {
            opacity: 0.65;
            transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem) !important;
            color: var(--primary-color) !important;
        }

        .form-floating > .form-control::placeholder,
        .form-floating > .form-select::placeholder {
            color: transparent;
        }

        .form-floating > .form-control:focus::placeholder {
            color: #cbd5e1;
        }

    span[asp-validation-for] {
        font-size: 0.85rem;
        margin-top: 0.375rem;
        display: block;
        color: #dc2626 !important;
    }

    .btn-register {
        width: 100%;
        height: 52px;
        background: var(--primary-color) !important;
        color: white !important;
        border: none !important;
        border-radius: 10px !important;
        font-size: 1rem !important;
        font-weight: 600 !important;
        letter-spacing: 0.025em;
        transition: all 0.2s ease;
        box-shadow: 0 4px 6px -1px rgba(22, 163, 74, 0.3);
        margin-bottom: 1.5rem !important;
    }

        .btn-register:hover {
            background: var(--primary-hover) !important;
            transform: translateY(-1px);
            box-shadow: 0 6px 12px -2px rgba(22, 163, 74, 0.4) !important;
        }

        .btn-register:active {
            transform: translateY(0) !important;
        }

        .btn-register:focus {
            box-shadow: 0 0 0 4px var(--input-focus), 0 4px 6px -1px rgba(22, 163, 74, 0.3) !important;
        }

    .text-center a {
        color: var(--primary-color) !important;
        font-size: 0.9rem !important;
        transition: color 0.2s ease;
        text-decoration: none !important;
        font-weight: 600 !important;
    }

        .text-center a:hover {
            color: var(--primary-hover) !important;
            text-decoration: underline !important;
        }

    .text-center span {
        color: var(--text-muted) !important;
        font-size: 0.9rem !important;
    }

    hr.my-4 {
        border-color: var(--border-color) !important;
        opacity: 1 !important;
        margin: 2rem 0 !important;
    }

    #external-account + div p.text-muted {
        color: var(--text-muted) !important;
        font-size: 0.9rem !important;
        margin-bottom: 1rem !important;
    }

    .btn-outline-dark {
        border: 1.5px solid var(--border-color) !important;
        color: var(--text-dark) !important;
        border-radius: 8px !important;
        padding: 0.625rem 1.5rem !important;
        font-size: 0.9rem !important;
        font-weight: 500 !important;
        transition: all 0.2s ease;
        background-color: white !important;
    }

        .btn-outline-dark:hover {
            background-color: #f8fafc !important;
            border-color: var(--primary-color) !important;
            color: var(--primary-color) !important;
            transform: translateY(-1px);
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

        .btn-outline-dark:focus {
            box-shadow: 0 0 0 4px var(--input-focus) !important;
        }

    @@media (max-width: 576px) {
        .container > div, .container > main

    {
        padding: 2rem 1.5rem;
        border-radius: 12px;
    }

    .text-center h2 {
        font-size: 1.5rem !important;
    }

    .form-floating > .form-control,
    .form-floating > .form-select {
        height: 54px !important;
    }

    .btn-register {
        height: 48px !important;
    }

    .btn-outline-dark {
        padding: 0.5rem 1.25rem !important;
        margin-bottom: 0.5rem !important;
    }

    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    *:focus-visible {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
    }

    .form-control:focus-visible,
    .form-select:focus-visible,
    .btn:focus-visible {
        outline: none;
    }
</style>

<div class="register-container">
    <div class="text-center mb-4">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        <p class="text-muted">Tạo tài khoản mới để bắt đầu sử dụng hệ thống</p>
    </div>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Họ và tên -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Fullname" class="form-control" placeholder=" " />
            <label asp-for="Input.Fullname">Họ và tên</label>
            <span asp-validation-for="Input.Fullname" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder=" " />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Mật khẩu -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" type="password" placeholder=" " />
            <label asp-for="Input.Password">Mật khẩu</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- Nhập lại mật khẩu -->
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder=" " />
            <label asp-for="Input.ConfirmPassword">Nhập lại mật khẩu</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Vai trò -->
        <div class="form-floating mb-4">
            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                <option disabled selected>Chọn vai trò</option>
            </select>
            <label asp-for="Input.Role">Vai trò</label>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn btn-register w-100 py-2 mb-3">
            Đăng ký
        </button>

        <div class="text-center">
            <span class="text-muted">Đã có tài khoản?</span>
            <a asp-page="./Login" class="fw-semibold ms-1">Đăng nhập</a>
        </div>

        @if (Model.ExternalLogins?.Count > 0)
        {
            <hr class="my-4" />
            <div class="text-center">
                <p class="text-muted mb-2">Hoặc đăng ký bằng</p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="btn btn-outline-dark me-2 mb-2" name="provider" value="@provider.Name" form="external-account">
                        @provider.DisplayName
                    </button>
                }
            </div>
        }
    </form>
</div>

<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post"></form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}