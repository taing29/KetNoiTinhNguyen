@model TinhNguyenXanh.DTOs.OrganizationDTO
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ tổ chức";
    var focusAreas = Model.FocusAreas ?? new List<string>();
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- THÔNG BÁO -->
            @if (TempData["Success"] != null)
            {
                <div class="alert-custom success">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>@TempData["Success"]</span>
                    <button type="button" class="btn-close-custom" onclick="this.parentElement.remove()">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert-custom error">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <span>@TempData["Error"]</span>
                    <button type="button" class="btn-close-custom" onclick="this.parentElement.remove()">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            }

            <!-- FORM CARD -->
            <div class="edit-card">
                <div class="edit-header">
                    <div class="header-icon">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <h3>Chỉnh sửa hồ sơ tổ chức</h3>
                </div>

                <div class="edit-body">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.UserId)

                        <div class="row g-4">
                            <!-- CỘT TRÁI: AVATAR + CƠ BẢN -->
                            <div class="col-lg-4">
                                <!-- AVATAR SECTION -->
                                <div class="avatar-section">
                                    <label class="section-label">Logo tổ chức</label>
                                    <div class="avatar-upload">
                                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                                        {
                                            <img src="@Url.Content(Model.AvatarUrl)"
                                                 alt="Logo"
                                                 class="avatar-preview" id="avatarPreview" />
                                        }
                                        else
                                        {
                                            <div class="avatar-placeholder" id="avatarPreview">
                                                <i class="bi bi-building"></i>
                                            </div>
                                        }
                                        <label for="avatarFile" class="avatar-upload-btn">
                                            <i class="bi bi-camera-fill"></i>
                                        </label>
                                        <input type="file" id="avatarFile" name="avatarFile" accept="image/*" class="d-none" />
                                    </div>
                                    <p class="upload-hint">Tối đa 5MB • JPG, PNG, GIF</p>
                                </div>

                                <!-- TÊN TỔ CHỨC -->
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label">Tên tổ chức <span class="required">*</span></label>
                                    <input asp-for="Name" class="form-input" placeholder="Nhập tên tổ chức" />
                                    <span asp-validation-for="Name" class="error-message"></span>
                                </div>

                                <!-- LOẠI TỔ CHỨC -->
                                <div class="form-group">
                                    <label asp-for="OrganizationType" class="form-label">Loại tổ chức <span class="required">*</span></label>
                                    <select asp-for="OrganizationType" class="form-select-custom" required>
                                        <option value="">-- Chọn loại tổ chức --</option>
                                        <option value="NGO">NGO/Phi lợi nhuận</option>
                                        <option value="Volunteer">Nhóm tình nguyện</option>
                                        <option value="Social">Doanh nghiệp xã hội</option>
                                        <option value="School">Trường học/Đại học</option>
                                        <option value="Government">Cơ quan nhà nước</option>
                                        <option value="Other">Khác</option>
                                    </select>
                                    <span asp-validation-for="OrganizationType" class="error-message"></span>
                                </div>

                                <!-- LĨNH VỰC HOẠT ĐỘNG -->
                                <div class="form-group">
                                    <label class="form-label">Lĩnh vực hoạt động <span class="required">*</span></label>
                                    <div class="checkbox-grid">
                                        <input type="hidden" name="FocusAreas" value="" />
                                        @foreach (var area in new[] { "Môi trường", "Giáo dục", "Y tế", "Cộng đồng", "Trẻ em", "Người già", "Động vật", "Khác" })
                                        {
                                            <label class="checkbox-item">
                                                <input type="checkbox" name="FocusAreas" value="@area"
                                                       @(focusAreas.Contains(area) ? "checked" : "") />
                                                <span class="checkbox-label">@area</span>
                                            </label>
                                        }
                                    </div>
                                    <span class="error-message" asp-validation-for="FocusAreas"></span>
                                </div>
                            </div>

                            <!-- CỘT PHẢI: CHI TIẾT -->
                            <div class="col-lg-8">
                                <!-- MÔ TẢ -->
                                <div class="form-group">
                                    <label asp-for="Description" class="form-label">Mô tả tổ chức <span class="required">*</span></label>
                                    <textarea asp-for="Description" class="form-textarea" rows="5" placeholder="Giới thiệu về sứ mệnh, tầm nhìn, hoạt động của tổ chức... (tối thiểu 50 ký tự)"></textarea>
                                    <span asp-validation-for="Description" class="error-message"></span>
                                </div>

                                <!-- THỐNG KÊ -->
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="MemberCount" class="form-label">Số thành viên</label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-people"></i>
                                                <input asp-for="MemberCount" type="number" class="form-input" min="0" placeholder="0" />
                                            </div>
                                            <span asp-validation-for="MemberCount" class="error-message"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="EventsOrganized" class="form-label">Sự kiện đã tổ chức</label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-calendar-event"></i>
                                                <input asp-for="EventsOrganized" type="number" class="form-input" min="0" placeholder="0" />
                                            </div>
                                            <span asp-validation-for="EventsOrganized" class="error-message"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- THÀNH TÍCH -->
                                <div class="form-group">
                                    <label asp-for="Achievements" class="form-label">Thành tích nổi bật</label>
                                    <textarea asp-for="Achievements" class="form-textarea" rows="4" placeholder="Mỗi dòng là một thành tích&#10;VD: Giải thưởng A năm 2024&#10;Hỗ trợ 1000 người khó khăn"></textarea>
                                    <p class="form-hint">Mỗi dòng là một thành tích. Nhấn Enter để xuống dòng.</p>
                                </div>

                                <!-- THÔNG TIN LIÊN HỆ -->
                                <div class="section-divider">
                                    <div class="divider-icon">
                                        <i class="bi bi-telephone-inbound"></i>
                                    </div>
                                    <h5>Thông tin liên hệ</h5>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ContactEmail" class="form-label">Email <span class="required">*</span></label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-envelope"></i>
                                                <input asp-for="ContactEmail" type="email" class="form-input" placeholder="email@example.com" />
                                            </div>
                                            <span asp-validation-for="ContactEmail" class="error-message"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber" class="form-label">Điện thoại <span class="required">*</span></label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-phone"></i>
                                                <input asp-for="PhoneNumber" class="form-input" placeholder="0123456789" />
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="error-message"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Website" class="form-label">Website</label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-globe"></i>
                                                <input asp-for="Website" type="url" class="form-input" placeholder="https://example.com" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- ĐỊA CHỈ -->
                                <div class="section-divider">
                                    <div class="divider-icon">
                                        <i class="bi bi-geo-alt"></i>
                                    </div>
                                    <h5>Địa chỉ</h5>
                                </div>

                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Address" class="form-label">Đường/Số nhà <span class="required">*</span></label>
                                            <input asp-for="Address" class="form-input" placeholder="Số nhà, đường..." />
                                            <span asp-validation-for="Address" class="error-message"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Ward" class="form-label">Phường/Xã</label>
                                            <input asp-for="Ward" class="form-input" placeholder="Phường..." />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="District" class="form-label">Quận/Huyện <span class="required">*</span></label>
                                            <input asp-for="District" class="form-input" placeholder="Quận..." />
                                            <span asp-validation-for="District" class="error-message"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="City" class="form-label">Tỉnh/Thành phố <span class="required">*</span></label>
                                            <input asp-for="City" class="form-input" placeholder="Thành phố..." />
                                            <span asp-validation-for="City" class="error-message"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- MẠNG XÃ HỘI -->
                                <div class="section-divider">
                                    <div class="divider-icon">
                                        <i class="bi bi-share"></i>
                                    </div>
                                    <h5>Mạng xã hội</h5>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FacebookUrl" class="form-label">Facebook</label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-facebook"></i>
                                                <input asp-for="FacebookUrl" type="url" class="form-input" placeholder="https://facebook.com/..." />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="InstagramUrl" class="form-label">Instagram</label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-instagram"></i>
                                                <input asp-for="InstagramUrl" type="url" class="form-input" placeholder="https://instagram.com/..." />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ZaloNumber" class="form-label">Số Zalo</label>
                                            <div class="input-with-icon">
                                                <i class="bi bi-chat-dots"></i>
                                                <input asp-for="ZaloNumber" class="form-input" placeholder="0123456789" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- TÀI LIỆU XÁC MINH -->
                                <div class="section-divider">
                                    <div class="divider-icon verified">
                                        <i class="bi bi-file-earmark-check"></i>
                                    </div>
                                    <h5>Tài liệu xác minh</h5>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.VerificationDocsUrl))
                                {
                                    <div class="current-doc">
                                        <i class="bi bi-file-earmark-pdf"></i>
                                        <div class="doc-info">
                                            <p class="doc-title">Tài liệu hiện tại</p>
                                            <a href="@Url.Content(Model.VerificationDocsUrl)" target="_blank" class="doc-link">
                                                Xem tài liệu <i class="bi bi-box-arrow-up-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                }

                                <div class="form-group">
                                    <label class="form-label">Tải tài liệu mới</label>
                                    <div class="file-upload">
                                        <input type="file" name="verificationDocFile" id="docFile" accept=".pdf,.doc,.docx" class="file-input" />
                                        <label for="docFile" class="file-label">
                                            <i class="bi bi-cloud-upload"></i>
                                            <span class="file-text">Chọn file PDF hoặc Word (tối đa 20MB)</span>
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="DocumentType" class="form-label">Loại tài liệu</label>
                                    <input asp-for="DocumentType" class="form-input" placeholder="VD: Giấy phép hoạt động, Đăng ký kinh doanh..." />
                                </div>

                                <!-- NÚT HÀNH ĐỘNG -->
                                <div class="form-actions">
                                    <a asp-action="Profile" class="btn-secondary">
                                        <i class="bi bi-arrow-left"></i>
                                        <span>Quay lại</span>
                                    </a>
                                    <button type="submit" class="btn-primary">
                                        <i class="bi bi-check-lg"></i>
                                        <span>Cập nhật hồ sơ</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Preview avatar
        document.getElementById('avatarFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(ev) {
                    const preview = document.getElementById('avatarPreview');
                    if (preview.tagName === 'IMG') {
                        preview.src = ev.target.result;
                    } else {
                        const newImg = document.createElement('img');
                        newImg.src = ev.target.result;
                        newImg.className = 'avatar-preview';
                        newImg.id = 'avatarPreview';
                        preview.parentNode.replaceChild(newImg, preview);
                    }
                };
                reader.readAsDataURL(file);
            }
        });

        // Preview document file name
        document.getElementById('docFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const label = document.querySelector('.file-text');
            if (file) {
                label.textContent = file.name;
            }
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --primary-color: #10b981;
            --primary-dark: #059669;
            --primary-light: #d1fae5;
            --secondary-color: #6b7280;
            --text-dark: #1f2937;
            --text-light: #6b7280;
            --bg-light: #f8fafc;
            --border-color: #e5e7eb;
            --error-color: #ef4444;
            --success-color: #10b981;
        }

        /* ==================== ALERTS ==================== */
        .alert-custom {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-weight: 500;
            animation: slideDown 0.3s ease;
        }

            .alert-custom.success {
                background: linear-gradient(135deg, #d1fae5, #ecfdf5);
                border: 2px solid var(--success-color);
                color: #065f46;
            }

            .alert-custom.error {
                background: linear-gradient(135deg, #fee2e2, #fef2f2);
                border: 2px solid var(--error-color);
                color: #991b1b;
            }

            .alert-custom i {
                font-size: 1.25rem;
            }

            .alert-custom span {
                flex: 1;
            }

        .btn-close-custom {
            background: none;
            border: none;
            color: inherit;
            cursor: pointer;
            padding: 0.25rem;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

            .btn-close-custom:hover {
                opacity: 1;
            }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ==================== EDIT CARD ==================== */
        .edit-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.06);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .edit-header {
            padding: 1.75rem 2rem;
            background: linear-gradient(135deg, var(--primary-light), #ecfdf5);
            border-bottom: 2px solid var(--primary-color);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

            .edit-header .header-icon {
                width: 50px;
                height: 50px;
                background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 1.5rem;
                box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            }

            .edit-header h3 {
                margin: 0;
                font-size: 1.5rem;
                font-weight: 700;
                color: var(--text-dark);
                font-family: 'Poppins', sans-serif;
            }

        .edit-body {
            padding: 2rem;
        }

        /* ==================== AVATAR SECTION ==================== */
        .avatar-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .section-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .avatar-upload {
            position: relative;
            display: inline-block;
            margin-bottom: 0.75rem;
        }

        .avatar-preview,
        .avatar-placeholder {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.2);
        }

        .avatar-placeholder {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3.5rem;
        }

        .avatar-upload-btn {
            position: absolute;
            bottom: 5px;
            right: 5px;
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
            transition: all 0.3s ease;
        }

            .avatar-upload-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 6px 16px rgba(16, 185, 129, 0.5);
            }

        .upload-hint {
            font-size: 0.75rem;
            color: var(--text-light);
            margin: 0;
        }

        /* ==================== FORM ELEMENTS ==================== */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .required {
            color: var(--error-color);
        }

        .form-input,
        .form-textarea,
        .form-select-custom {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 10px;
            font-size: 0.9375rem;
            color: var(--text-dark);
            background: white;
            transition: all 0.3s ease;
        }

            .form-input:focus,
            .form-textarea:focus,
            .form-select-custom:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
            }

        .form-textarea {
            resize: vertical;
            min-height: 100px;
        }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon i {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--text-light);
                font-size: 1.125rem;
            }

            .input-with-icon .form-input {
                padding-left: 3rem;
            }

        .form-hint {
            font-size: 0.75rem;
            color: var(--text-light);
            margin-top: 0.25rem;
        }

        .error-message {
            display: block;
            font-size: 0.75rem;
            color: var(--error-color);
            margin-top: 0.25rem;
            font-weight: 500;
        }

        /* ==================== CHECKBOX GRID ==================== */
        .checkbox-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem;
            background: var(--bg-light);
            border: 2px solid var(--border-color);
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .checkbox-item:hover {
                background: var(--primary-light);
                border-color: var(--primary-color);
            }

            .checkbox-item input[type="checkbox"] {
                width: 20px;
                height: 20px;
                accent-color: var(--primary-color);
                cursor: pointer;
            }

                .checkbox-item input[type="checkbox"]:checked + .checkbox-label {
                    color: var(--primary-dark);
                    font-weight: 600;
                }

        .checkbox-label {
            flex: 1;
            font-size: 0.875rem;
            color: var(--text-dark);
            cursor: pointer;
        }

        /* ==================== SECTION DIVIDER ==================== */
        .section-divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 2rem 0 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--border-color);
        }

        .divider-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.125rem;
        }

            .divider-icon.verified {
                background: linear-gradient(135deg, #10b981, #059669);
            }

        .section-divider h5 {
            margin: 0;
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--text-dark);
            font-family: 'Poppins', sans-serif;
        }

        /* ==================== FILE UPLOAD ==================== */
        .current-doc {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
