@model TinhNguyenXanh.DTOs.EventRegistrationDTO
@{
    ViewData["Title"] = "Đăng ký: " + Model.EventTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-color: #16a34a;
        --primary-hover: #15803d;
        --accent-light: #f0fdf4;
        --text-dark: #0f172a;
        --text-muted: #64748b;
        --border-color: #e5e7eb;
        --bg-light: #ffffff;
    }

    body {
        background: var(--bg-light);
        font-family: "Segoe UI", sans-serif;
    }

    .registration-container {
        background: #ffffff;
        min-height: 100vh;
        padding: 3rem 0;
    }

    /* Header */
    .page-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

        .page-header h1 {
            color: var(--text-dark);
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            color: var(--text-muted);
            font-size: 1rem;
        }

    /* Registration Card */
    .registration-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        max-width: 700px;
        margin: 0 auto;
    }

    .card-header-custom {
        background: linear-gradient(135deg, var(--primary-color), #10b981);
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
    }

        .card-header-custom::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background: white;
            border-radius: 2px;
        }

        .card-header-custom h4 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

    .card-body-custom {
        padding: 2.5rem;
    }

    /* Event Info Alert */
    .event-info-box {
        background: var(--accent-light);
        border: 1px solid #bbf7d0;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

        .event-info-box .event-title {
            color: var(--text-dark);
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .event-info-box .event-title i {
                color: var(--primary-color);
                font-size: 1.25rem;
            }

        .event-info-box .info-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            color: var(--text-muted);
            font-size: 0.95rem;
        }

            .event-info-box .info-item:last-child {
                margin-bottom: 0;
            }

            .event-info-box .info-item i {
                color: var(--primary-color);
                font-size: 1.1rem;
                margin-top: 2px;
                flex-shrink: 0;
            }

    /* Form Elements */
    .form-label {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid var(--border-color);
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: #cbd5e1;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }

    /* Buttons */
    .btn-group-custom {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-back {
        background: white;
        border: 2px solid var(--border-color);
        color: var(--text-dark);
        padding: 0.875rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        flex: 0 0 auto;
    }

        .btn-back:hover {
            background: #f8fafc;
            border-color: var(--text-muted);
            color: var(--text-dark);
            transform: translateY(-2px);
        }

        .btn-back i {
            font-size: 1.1rem;
        }

    .btn-submit {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.875rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        flex: 1;
    }

        .btn-submit:hover {
            background: var(--primary-hover);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(22, 163, 74, 0.3);
        }

        .btn-submit i {
            font-size: 1.1rem;
        }

    /* Form Group Spacing */
    .form-group-custom {
        margin-bottom: 1.5rem;
    }

        .form-group-custom:last-of-type {
            margin-bottom: 0;
        }

    /* Helper Text */
    .helper-text {
        background: #f8fafc;
        border-left: 3px solid var(--primary-color);
        padding: 1rem 1.25rem;
        border-radius: 8px;
        margin-top: 2rem;
        font-size: 0.9rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

        .helper-text strong {
            color: var(--text-dark);
            display: block;
            margin-bottom: 0.5rem;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .registration-container {
            padding: 2rem 0;
        }

        .page-header h1 {
            font-size: 1.5rem;
        }

        .card-header-custom {
            padding: 1.5rem;
        }

            .card-header-custom h4 {
                font-size: 1.25rem;
            }

        .card-body-custom {
            padding: 1.5rem;
        }

        .event-info-box {
            padding: 1.25rem;
        }

            .event-info-box .event-title {
                font-size: 1rem;
            }

        .btn-group-custom {
            flex-direction: column;
            gap: 0.75rem;
        }

        .btn-back,
        .btn-submit {
            width: 100%;
        }
    }

    /* Loading State */
    .btn-submit:disabled {
        background: #94a3b8;
        cursor: not-allowed;
        transform: none;
    }

        .btn-submit:disabled:hover {
            box-shadow: none;
        }
</style>

<div class="registration-container">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1>Đăng ký tham gia hoạt động</h1>
            <p>Vui lòng điền đầy đủ thông tin để hoàn tất đăng ký</p>
        </div>

        <!-- Registration Card -->
        <div class="registration-card">
            <div class="card-header-custom">
                <h4>BIỂU MẪU ĐĂNG KÝ</h4>
            </div>
            <div class="card-body-custom">
                <!-- Event Info -->
                <div class="event-info-box">
                    <div class="event-title">
                        <i class="bi bi-calendar-event"></i>
                        <span>@Model.EventTitle</span>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-clock"></i>
                        <span>
                            <strong>Thời gian:</strong>
                            @Model.StartTime.ToString("dd/MM/yyyy HH:mm") - @Model.EndTime.ToString("HH:mm")
                        </span>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-geo-alt"></i>
                        <span>
                            <strong>Địa điểm:</strong>
                            @Model.Location
                        </span>
                    </div>
                </div>

                <!-- Registration Form -->
                <form asp-action="RegisterEvent" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="EventId" />

                    <div class="form-group-custom">
                        <label asp-for="FullName" class="form-label">
                            Họ và tên <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Phone" class="form-label">
                            Số điện thoại <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Phone" class="form-control" placeholder="Ví dụ: 0912345678" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Reason" class="form-label">
                            Lý do tham gia <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Reason" class="form-control" rows="4"
                                  placeholder="Chia sẻ lý do bạn muốn tham gia hoạt động này..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <div class="helper-text">
                        <strong>Lưu ý:</strong>
                        Sau khi gửi đăng ký, ban tổ chức sẽ xem xét và phản hồi trong vòng 24-48 giờ.
                        Bạn sẽ nhận được thông báo qua email về kết quả đăng ký.
                    </div>

                    <div class="btn-group-custom">
                        <a asp-action="Details" asp-route-id="@Model.EventId" class="btn-back">
                            <i class="bi bi-arrow-left"></i>
                            <span>Quay lại</span>
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="bi bi-send"></i>
                            <span>Gửi đăng ký</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}